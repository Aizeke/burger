<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 justify-content-center">
        <img src="https://cdn.imgbin.com/12/25/8/imgbin-hamburger-cheeseburger-fast-food-pixel-art-burger-king-DMapzxUrAQZfLKHSa0sE3mpaY.jpg"
            class="rounded mx-auto d-block burgerimg" alt="burger image">
        <h1>Eat-Da-Burger!</h1>
        <div class="row">
            <div class="col-md-6 created">
                <ul>
                    {{#each stuff}}
                    {{#unless devoured}}
                    {{> stuff/stuff-block devoured=true}}
                    {{/unless}}
                    <button type="submit" id="delete" value={{stuff.id}}>Delete</button>
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6 devoured">
                
            </div>
        </div>
        <textarea class="form-control" aria-label="With textarea"></textarea>
        <a href="#" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Submit</a>
        <h3>Enter a burger you want to eat, Click the "SUBMIT" button.</h3>
    </div>
    <div class="col-md-3"></div>
</div>